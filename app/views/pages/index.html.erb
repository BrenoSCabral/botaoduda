<%@click = Click.first%>


<div class="d-flex align-items-center justify-content-center" style="height:90vh">

  <h3>Duda est√° me devendo <span id="contador"> <%=@click.counter%> </span>  beijinhos...</h3>
</div>
<div class="d-flex align-items-center justify-content-center">
  <button id="beijinho" type="button" class="btn btn-dark btn-lg" style="margin-top:-75vh">Adicionar beijinho!</button>
</div>


<script>
document.addEventListener("DOMContentLoaded", function() {
  var beijinhoButton = document.getElementById("beijinho");

  beijinhoButton.addEventListener("click", function() {
    var request = new XMLHttpRequest();
    request.open("GET", "/increment_counter", true);
    request.onreadystatechange = function() {
      if (request.readyState === 4 && request.status === 200) {
        var counterElement = document.getElementById("contador");
        counterElement.innerText = request.responseText;
      }
    };
    request.send();
  });
});
</script>